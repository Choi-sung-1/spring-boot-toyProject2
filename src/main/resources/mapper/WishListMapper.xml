<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.toyProject2.mapper.WishListMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="wishlistId">
        INSERT INTO TBL_WISHLIST(MEMBER_ID,PRODUCT_ID)
        VALUES (#{memberId},#{productId})
    </insert>
    <select id="selectWishProduct">
        SELECT * FROM TBL_WISHLIST
        WHERE MEMBER_ID = #{memberId} AND PRODUCT_ID = #{productId}
    </select>
    <select id="selectAllByMemberId">
        SELECT * FROM TBL_WISHLIST
        WHERE MEMBER_ID = #{memberId}
    </select>
    <delete id="delete">
        DELETE FROM TBL_WISHLIST
        WHERE MEMBER_ID=#{memberId} AND PRODUCT_ID=#{productId}
    </delete>
</mapper>